<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/clean_template/macros/master"
      i18n:domain="ulearn">

  <head>
    <metal:block fill-slot="top_slot"
               tal:define="dummy python:request.set('disable_border',1);"/>
  </head>

  <body>

    <metal:main metal:fill-slot="main">
      <div id="maxui-widget-container"></div>
      <script type="text/javascript"
              tal:attributes="src string:${view/portal_url}/max_variables.js">
      </script>
      <script type="text/javascript" src="++maxui++static/maxui.loader.chat.js"></script>
      <script type="text/javascript">
        $( document ).ready( function() {
          setTimeout( function(){
            $( "#maxui-search" ).remove();
            $( "#maxui-search-toggle" ).remove();
            $( "#maxui-show-timeline" ).remove();
            $( "#maxui-activity-sort" ).remove();
            $( "#maxui-news-activities" ).remove();
            $( "#maxui-timeline" ).remove();
            $( "#maxui-show-conversations" ).remove();
          }, 1000);
        });
      </script>
    </metal:main>
  </body>
</html>
